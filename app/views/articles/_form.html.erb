<div class="container p-t-20">
  <div class="row">
    <div class="col-sm-8">
    <%= form_with model: [@article.user, @article], local: true do |form| %>
     
        <% if @article.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
       
        <p>
          <div class="field">
          <%= form.label :title %><br>
          <%= form.text_field :title, class:"form-control", placeholder:"Type the title here" ,:validate => true %>
          </div>
        </p>
       
        <p>
          <div class="field">
          <%= form.label :body %><br>
          <%= form.text_area :body, class:"form-control", placeholder:"Type the content here", :validate => true %>
        </div>
        </p>
       
        <p>
          <div class="field">
          <%= form.submit class:"btn btn-primary", data: { disable_with: false }%>
        </div>
        </p>
       
      <% end %>
      <br/>
      <%= link_to 'Back', user_articles_path, class:"btn btn-outline-dark" %>
    </div>
    </div>
  </div>