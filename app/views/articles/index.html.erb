<body>
<div class="container" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-8">
      <h3>Articles</h3>
      <% if @articles.any? %>
	      <table>
			  <tr>
			    <th>Title</th>
			    <th>Text</th>
			    <th colspan="3"></th>
			  </tr>
			 
			  <% @articles.each do |article| %>
			    <tr>
			      <td><strong><%= article.title %></strong></td>
			      <td><%= article.body %></td>
			      <td><%= link_to 'Edit', edit_user_article_path(@user,article) %></td>
			      <td> | </td> 
			      <td> <%= link_to 'Delete', [article.user, article],
			               method: :delete,
			               data: { confirm: 'Are you sure?' } %>      
			      </td>
			    </tr>
			  <% end %>
			</table>
		<% end %>
 	</div>
  </div>

  <div class="row">
  	<p>
  	<%= link_to 'Create Article', new_user_article_path(@user) %> 
  </p>
  </div> 
</div>
</body>