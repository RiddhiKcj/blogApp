
<div class="container content-page" style="margin-top:40px">
  <div class="row">
    <div class="col-sm-11">
      <h3><strong><u>Articles</u></strong></h3>
      <% if @articles.any? %>
		  <table>
			 <tbody>
			  <% @articles.each do |article| %>
			    <tr>
			      <td><strong><%= article.title %></strong></td>
			      <td><%= article.body %></td>
			      <td><%= link_to 'Edit', edit_user_article_path(@user,article) %></td>
			      <td> | </td> 
			      <td> <%= link_to 'Delete', [article.user, article],
			               method: :delete,
			               data: { confirm: 'Are you sure?' } %>      
			      </td>
			    </tr>
			  <% end %>
			  </tbody>
			</table>
		<% else %>
		<p>No articles to show. Try creating one!</p>
		<% end %>
 	</div>
  </div>
</div>