<span class="login-form-title p-b-40">
<h2><strong>Forgot your password?</strong></h2>
</span>
  <p> Just enter your registered email and hit the button below to get the passowrd reset instructions.</p>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="p-b-15 p-t-20">
      <%= f.label :email, class:"label-input" %> :
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Type your email" %>
    </div>
    <div class="container-login-form-btn">
      <div class="wrap-login-form-btn">
        <div class="login-form-bgbtn">
        <%= f.submit value: "Send me reset password instructions", class:"btn login-form-btn", data: { disable_with: false } %>
        </div>
      </div>
    </div>
    <br/>
    <%= link_to 'Back', '/', class:"txt2" %>
   
  <% end %>
  
