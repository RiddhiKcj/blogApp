<div class="container">
      <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
          <div class="card card-signin my-5">
            <div class="card-body">
              <div class="imgcontainer">
                  <%= image_tag "login_img.png", class: "mx-auto d-block"%>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), :validate => true) do |f| %>
                <div class="form-label-group">
                  <%= f.label :username %><br />
                  <%= f.text_field :username, class:"form-control", autofocus: true, autocomplete: "username", validate: { presence: true } %>
                </div>

                <div class="form-label-group">
                  <%= f.label :password %><br />
                  <%= f.password_field :password, class:"form-control", autocomplete: "current-password", validate: { presence: true } %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="custom-control custom-checkbox mb-3">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                  </div>
                <% end %>

                <div >
                  <%= f.submit value: "Log in", class:"actions btn btn-lg btn-primary btn-block text-uppercase form-control"  %>
                </div>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>




