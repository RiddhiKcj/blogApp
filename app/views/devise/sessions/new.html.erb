<%= form_for(resource, as: resource_name, url: session_path(resource_name), :validate => true, :html => {:class => 'login-form '}) do |f| %>
          
            <span class="login-form-title p-b-40">
              Login
            </span>

            <div class="wrap-input validate-input m-b-15" data-validate="Username is required">
              <%= f.label :username, class:"label-input"%>
              <div class="row" ><br/>
                <div class="col-sm-3" style="display:inline"><span class="fa fa-user" style="display:inline;"></span></div>
                <div class="col-sm-3" style="display:inline;""><%= f.text_field :username, autofocus: true, autocomplete: "username",placeholder:"Type your username",class:"focus-input", validate: { presence: true } %></div>
              </div>
            </div>

            <div class="wrap-input validate-input m-b-15" data-validate="Password is required">
            <%= f.label :password, class:"label-input" %>    
            <div class="row" ><br/>
              <div class="col-sm-3" style="display:inline;"><span class="fa fa-lock " style="display:inline;"></span></div>
              <div class="col-sm-3" style="display:inline;"><%= f.password_field :password, autocomplete: "current-password", placeholder:"Type your password",class:"focus-input" , validate: { presence: true } %>
            </div>
          </div>
          </div>
            <div class="text-right p-t-8 p-b-15">
            <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
              <%= link_to "Forgot password?", new_password_path(resource_name) %><br />
            <% end %>
            </div>

            <div class="container-login-form-btn">
              <div class="wrap-login-form-btn">
                <div class="login-form-bgbtn">
                <%= f.submit value: "Login", class:"btn login-form-btn"  %>
            
                </div>
              </div>
            </div>
            <div class="text-right p-t-8 p-b-10">
            <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
            <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name),class:"txt2" %><br />
            <% end %>
            </div>
        
            <div class="txt1 text-center p-t-10 p-b-10">
            <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
              <%= link_to "Sign up", new_registration_path(resource_name), class:"txt2" %><br /><br />
            <% end %>
              <span>
                Or Sign Up Using
              </span>
            </div>
            <div class="flex-c-m">
            <%= link_to '<i class="fa fa-facebook"></i>'.html_safe, omniauth_authorize_path(resource_name, :facebook), class:"login-social-item bg1" %>
            <%= link_to '<i class="fa fa-google-plus"></i>'.html_safe, omniauth_authorize_path(resource_name, :google_oauth2), class:"login-social-item bg3" %>
            </div>
          <% end %>



